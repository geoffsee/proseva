{
  "name": "proseva",
  "version": "0.0.0-prerelease",
  "private": true,
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "better-sqlite3": "^12.6.2",
    "eslint": "^9.39.1",
    "pdf-lib": "^1.17.1",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "clean": "./cleanup.sh",
    "build": "bun --filter=@proseva/* run --parallel build",
    "dev": "bun --filter=@proseva/server --filter=@proseva/gui run --parallel dev",
    "test": "vitest run --silent='passed-only'",
    "test:coverage": "vitest run --silent='passed-only' --coverage",
    "lint": "eslint .",
    "typecheck": "bun --filter @proseva/* typecheck",
    "server": "bun --filter=@proseva/server run",
    "datasets": "bun --filter=@proseva/datasets run",
    "gui": "bun --filter=@proseva/gui run",
    "electron": "bun --filter=@proseva/electron run",
    "cli": "bun --filter=@proseva/cli run",
    "sdk": "bun --filter=@proseva/sdk run",
    "dist:electron": "bun run build && bun --filter=@proseva/electron run dist:local",
    "scan:random": "tools/scanner-server/generate-doc.ts",
    "scanner:run": "(cd tools/scanner-server && docker compose up -d)",
    "scanner:stop": "(cd tools/scanner-server && docker compose down)",
    "scanner:logs": "(cd tools/scanner-server && docker compose logs -f)"
  }
}
