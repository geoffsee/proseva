{
  "name": "@pro-se-va/cli",
  "version": "0.1.0",
  "description": "CLI for managing Pro-Se-VA server remotely",
  "type": "module",
  "bin": {
    "proseva": "./bin/proseva.ts"
  },
  "scripts": {
    "generate-types": "openapi-typescript ../server/openapi.json -o lib/api-types.d.ts",
    "build": "bun build bin/proseva.ts --outdir dist --target node",
    "dev": "bun run bin/proseva.ts",
    "test": "bun test"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "openapi-fetch": "^0.12.2",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "ora": "^8.1.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "openapi-typescript": "^7.4.3",
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.9"
  }
}
